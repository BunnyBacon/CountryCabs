<ul>
  <% if ::Refinery::Bookings::Admin::BookingsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.bookings_admin_bookings_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_bookings_admin_booking_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Bookings::Admin::BookingsController.sortable? && ::Refinery::Bookings::Booking.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Bookings"),
                 refinery.bookings_admin_bookings_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Bookings"),
                 refinery.bookings_admin_bookings_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
